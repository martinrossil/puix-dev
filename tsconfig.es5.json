{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "moduleResolution": "Node",
        "sourceMap":  false,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "outDir": "./es5",
        "lib": ["es2015", "dom"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules/**",
        "**/*.spec.ts"
    ]
}